<h1>Edit product</h1>
<form action="/product/{{id}}?_method=PUT" method="post" autocomplete="off">
  <label for="pname">Product name</label>
  <input
    type="text"
    id="pname"
    name="product_name"
    minlength="3"
    required
    value="{{product}}"
  />
  <br />
  <br />
  <label for="price">Price</label>
  <input
    type="number"
    id="price"
    min="10"
    max="9999999"
    name="price"
    required
    value="{{price}}"
  />
  <br />
  <br />
  <label for="quantity">Quantity</label>
  <input
    type="number"
    id="quantity"
    min="10"
    max="100"
    name="quantity"
    required
    value="{{quantity}}"
  />
  <br />
  <br />
  <label for="description">Description</label>
  <input
    type="text"
    id="description"
    name="description"
    required
    value="{{description}}"
  />
  <br />
  <br />
  <button>Edit product</button>
</form>
<a href="/products"> <button>Go to home</button></a>